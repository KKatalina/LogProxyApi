@{
    ViewData["Title"] = "Home Page";
}

<div >
    <h2 class="display-4">Create New Message</h2>
    <div id="app">
        <div class="alert alert-success" role="alert" v-if="infoMessage">
            {{infoMessage}}
        </div>
        <div class="alert alert-danger" role="alert" v-if="errorMessage">
            {{errorMessage}}
        </div>
        <div class="form-group">
            <p>
                <label>Title</label>
                <input type="text" class="form-control" placeholder="Enter title" v-model="title" />
            </p>

            <p>
                <label>Text</label>
                <textarea rows="10" class="form-control" placeholder="Enter message" v-model="text"></textarea>
            </p>

            <div>
                <button class="btn btn-primary" v-on:click="saveMessage">Submit</button>
            </div>
        </div>

        <div>
            <h2 class="display-4" style="display: inline-block;">All Messages</h2>
            <button class="btn btn-info" style="float: right;" v-on:click="getMessages">Refresh List</button>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Text</th>
                    <th scope="col">Received Date</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="msg in messages">
                    <td>{{ msg.id }}</td>
                    <td>{{ msg.title }}</td>
                    <td>{{ msg.text }}</td>
                    <td>{{ msg.receivedAt }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
